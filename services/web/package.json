{
  "name": "cloud-native-web-development",
  "description": "cloud-native-web-development",
  "version": "0.0.1",
  "scripts": {
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "dev:tailwind": "postcss static/tailwind.css -o static/index.css",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "dev": "run-p dev:*",
    "dev:firebase": "npm run dev --prefix firebase",
    "dev:sapper": "sapper dev",
    "build": "sapper build --legacy",
    "export": "NODE_ENV=production sapper export ./firebase/public --legacy",
    "start": "node __sapper__/build",
    "firebase:login": "firebase login --no-localhost",
    "deploy:clean": "rm -fr __sapper__ ./firebase/public",
    "deploy": "run-s deploy:clean export deploy:firebase",
    "deploy:firebase": "npm run deploy --prefix firebase",
    "postinstall": "npm install --prefix firebase",
    "cy:run": "NODE_ENV=test cypress run",
    "cy:open": "NODE_ENV=test cypress open"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "polka": "next",
    "sirv": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@bahmutov/cy-rollup": "^2.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@testing-library/cypress": "^7.0.1",
    "cypress": "^5.3.0",
    "cypress-svelte-unit-test": "^3.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.1",
    "rollup": "^2.28.2",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.28.0",
    "svelte": "^3.17.3",
    "svelte-preprocess": "^4.3.2",
    "tailwindcss": "^1.8.10",
    "tailwindcss-pseudo-elements": "^1.3.0"
  }
}
